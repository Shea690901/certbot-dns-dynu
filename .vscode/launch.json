{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Lint",
            "type": "debugpy",
            "request": "launch",
            "module": "pylint",
            "args": [
                "-rn",
                "-sn",
                "--rcfile=.pylintrc",
                "src",
            ],
            "console": "integratedTerminal",
            "jinja": true,
            "justMyCode": false
        },
        {
            "name": "Python: Test",
            "type": "debugpy",
            "request": "launch",
            "module": "pytest",
            "args": [
                "-s",
                "src",
            ],
            "console": "integratedTerminal",
            "jinja": true,
            "justMyCode": false
        },
    ]
}
